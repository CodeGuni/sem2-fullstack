<% if (message) { %>
    <div class="alert <%= message.includes('Error') ? 'alert-danger' : 'alert-success' %> alert-dismissible fade show">
      <%= message %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% } %>
  
  <div class="card">
    <div class="card-header">Examiner Dashboard</div>
    <div class="card-body">
      <h5>Filter Drivers</h5>
      <form method="POST" action="/examiner/filter" class="mb-4">
        <div class="row">
          <div class="col-md-4">
            <label for="testType" class="form-label">Test Type</label>
            <select class="form-control" id="testType" name="testType">
              <option value="">All</option>
              <option value="G2" <%= testTypeFilter === 'G2' ? 'selected' : '' %>>G2</option>
              <option value="G" <%= testTypeFilter === 'G' ? 'selected' : '' %>>G</option>
            </select>
          </div>
          <div class="col-md-2 align-self-end">
            <button type="submit" class="btn btn-primary">Filter</button>
          </div>
        </div>
      </form>
  
      <h5>Drivers Ready for Test</h5>
      <% if (drivers && drivers.length > 0) { %>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>Name</th>
              <th>Test Type</th>
              <th>Appointment</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% drivers.forEach(driver => { %>
              <tr>
                <td><%= driver.firstname %> <%= driver.lastname %></td>
                <td><%= driver.testType %></td>
                <td>
                  <%= new Date(driver.appointment.date).toLocaleDateString('en-US', { 
                    weekday: 'short', 
                    month: 'short', 
                    day: 'numeric', 
                    year: 'numeric' 
                  }) %> - <%= driver.appointment.time %>
                </td>
                <td>
                  <form method="POST" action="/examiner/evaluate" class="d-inline">
                    <input type="hidden" name="driverId" value="<%= driver._id %>">
                    <button type="submit" class="btn btn-sm btn-info">Evaluate</button>
                  </form>
                </td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p>No drivers are ready for testing at this time.</p>
      <% } %>
  
      <% if (selectedDriver) { %>
        <hr>
        <h5>Evaluate Driver: <%= selectedDriver.firstname %> <%= selectedDriver.lastname %></h5>
        <div class="card mb-3">
          <div class="card-body">
            <p><strong>Test Type:</strong> <%= selectedDriver.testType %></p>
            <p><strong>Appointment:</strong> 
              <%= new Date(selectedDriver.appointment.date).toLocaleDateString('en-US', { 
                weekday: 'short', 
                month: 'short', 
                day: 'numeric', 
                year: 'numeric' 
              }) %> - <%= selectedDriver.appointment.time %>
            </p>
            <p><strong>Car Details:</strong></p>
            <ul>
              <li>Make: <%= selectedDriver.car_details.make %></li>
              <li>Model: <%= selectedDriver.car_details.model %></li>
              <li>Year: <%= selectedDriver.car_details.year %></li>
              <li>Plate Number: <%= selectedDriver.car_details.platno %></li>
            </ul>
          </div>
        </div>
        <form method="POST" action="/examiner/evaluate" class="needs-validation" novalidate>
          <input type="hidden" name="driverId" value="<%= selectedDriver._id %>">
          <div class="mb-3">
            <label for="comment" class="form-label">Comment</label>
            <textarea class="form-control" id="comment" name="comment" rows="3" placeholder="Enter your evaluation comments"></textarea>
          </div>
          <div class="mb-3">
            <label class="form-label">Result</label>
            <div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="passFail" id="pass" value="true" required>
                <label class="form-check-label" for="pass">Pass</label>
              </div>
              <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="passFail" id="fail" value="false" required>
                <label class="form-check-label" for="fail">Fail</label>
              </div>
            </div>
            <div class="invalid-feedback">Please select a result.</div>
          </div>
          <button type="submit" class="btn btn-success">Submit Evaluation</button>
        </form>
      <% } %>
    </div>
  </div>
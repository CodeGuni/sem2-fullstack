<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Drive Test Kiosk - <%= typeof title !== 'undefined' ? title : 'Home' %></title>
  <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500&display=swap" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/styles.css">
  <link rel="icon" href="/favicon.svg" type="image/svg+xml">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <span class="material-icons">directions_car</span>
        Drive Test Kiosk
      </a>
      <div class="navbar-nav ms-auto">
        <% if (user) { %>
          <% if (user.userType === 'Driver') { %>
            <a class="nav-item nav-link" href="/g2">
              <span class="material-icons">assignment</span> G2 Test
            </a>
            <a class="nav-item nav-link" href="/g">
              <span class="material-icons">verified</span> G Test
            </a>
          <% } else if (user.userType === 'Admin') { %>
            <a class="nav-item nav-link" href="/appointments">
              <span class="material-icons">schedule</span> Appointments
            </a>
          <% } %>
          <a class="nav-item nav-link" href="/logout">
            <span class="material-icons">logout</span> Logout
          </a>
        <% } else { %>
          <a class="nav-item nav-link" href="/login">
            <span class="material-icons">login</span> Login
          </a>
        <% } %>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <%- body %>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const forms = document.querySelectorAll('form');
      forms.forEach(form => {
        form.addEventListener('submit', function(event) {
          if (!form.checkValidity()) {
            event.preventDefault();
            event.stopPropagation();
          }
          form.classList.add('was-validated');
        });
      });
    });
  </script>
</body>
</html>